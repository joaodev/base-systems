            $("#phone").mask("(99)9999-9999");
            $("#cellphone").mask("(99)99999-9999");
            $("#whatsapp").mask("(99)99999-9999");

            $('#formCreateUser').validate({
                rules: {
                    name: {
                        remote: { 
                            type: "post",
                            url: "usuarios/valor-existente",
                        }
                    },
                    email: {
                        remote: { 
                            type: "post",
                            url: "usuarios/valor-existente",
                        }
                    },
                    cellphone: {
                        remote: { 
                            type: "post",
                            url: "usuarios/valor-existente",
                        }
                    },
                },
                messages: {
                    name: {
                        remote: "Nome já cadastrado"
                    },
                    email: {
                        remote: "Email já cadastrado"
                    },
                    cellphone: {
                        remote: "Celular já cadastrado"
                    }
                },
                submitHandler: function( form ){
                    var dados = $( form ).serialize();
                    $("#modalXLLoader").show();
                    $("#btnSubmit").show('disabled', true);
                    
                    $.ajax({
                        type: "POST",
                        url: "usuarios/processa-cadastro",
                        data: dados,
                        dataType: 'json',
                        async: true
                    }).done(function(data) {
                        showAlert(data.type, data.title, data.msg, data.pos);
                        $("#modalXLLoader").hide();
                        
                        if (data.type == 'success') {
                            $("#modalXL").modal('hide');
                            openModule('usuarios');
                        }
                    }).fail(function() {
                        showInternalErrorAlert(); 
                        $("#modalXLLoader").hide();   
                        $("#btnSubmit").show('disabled', false);
                    }); 

                    return false;
                }
            });
        });
    </script>
