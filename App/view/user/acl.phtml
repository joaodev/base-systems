                let status_acl = "";
                if ($('#my-checkbox-' + uuid).is(":checked")) {
                    status_acl = 1;    
                } else {
                    status_acl = 0;
                }
                
                $("#baseLoader").show();
                $.ajax({
                    type: "POST",
                    url: "usuarios/altera-permissao",
                    data: {
                        uuid: uuid,
                        status: status_acl
                    },
                    dataType: 'json',
                    async: true
                }).done(function(data) {
                    showAlert(data.type, data.title, data.msg, data.pos);
                    $("#baseLoader").hide();
                }).fail(function() {
                    showInternalErrorAlert(); 
                    $("#baseLoader").hide();   
                }); 
            }
